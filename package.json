{
  "dependencies": {
    "@create-figma-plugin/ui": "^4.0.2",
    "@create-figma-plugin/utilities": "^4.0.2",
    "@tailwindcss/cli": "^4.1.12",
    "preact": "^10.27.1"
  },
  "devDependencies": {
    "@create-figma-plugin/build": "^4.0.2",
    "@create-figma-plugin/tsconfig": "^4.0.2",
    "@figma/plugin-typings": "1.82.0",
    "concurrently": "^9.2.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2"
  },
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "npx @tailwindcss/cli --input ./src/input.css --output ./src/output.css",
    "build:js": "build-figma-plugin --typecheck --minify",
    "watch": "npm run build:css && concurrently npm:watch:css npm:watch:js",
    "watch:css": "npx @tailwindcss/cli --input ./src/input.css --output ./src/output.css --watch",
    "watch:js": "build-figma-plugin --typecheck --watch"
  },
  "figma-plugin": {
    "editorType": [
      "figjam"
    ],
    "id": "bulk-stickies",
    "name": "Bulk Stickies",
    "main": "src/main.ts",
    "ui": "src/ui.tsx"
  }
}
